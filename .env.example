# Application version
APP_VERSION=1.0.0

# Frontend configuration
FRONTEND_PORT=3000

# Database configuration
DB_USER=postgres
DB_PASSWORD=securepassword
DB_NAME=ampere_db
DB_PORT=5432

# Database connection string
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@db:5432/${DB_NAME}

# Node environment
NODE_ENV=production

# Persistent storage paths for Synology NAS
POSTGRES_DATA_PATH=/volume1/docker/ampere-webapp/postgres_data
UPLOADS_PATH=/volume1/docker/ampere-webapp/uploads
DATA_PATH=/volume1/docker/ampere-webapp/app_data